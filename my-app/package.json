{
  "name": "scavenger-hunt-backend",
  "version": "1.0.0",
  "description": "Backend for Scavenger Hunt app with React frontend",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc && npm run build:client",
    "build:client": "cd client && npm run build",
    "start": "npm run build && node dist/server.js",
    "start:dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:client": "cd client && cross-env PORT=3000 react-scripts start",
    "test:client": "cd client && react-scripts test --watchAll=false --transformIgnorePatterns \"node_modules/(?!axios)/\"",
    "test:server": "jest --testMatch '**/server/test/*.test.tsx' --testEnvironment node --transformIgnorePatterns \"node_modules/(?!axios)/\"",
    "test": "npm run test:client && npm run test:server"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "multer": "^1.4.5-lts.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.28.0",
    "react-scripts": "^5.0.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-syntax-import-attributes": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "@babel/preset-typescript": "^7.26.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.12",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/supertest": "^6.0.2",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "del": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-transform-css": "^6.0.1",
    "jest-watch-typeahead": "^2.2.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ]
  }
}
